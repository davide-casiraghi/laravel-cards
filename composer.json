{
    "name": "davide-casiraghi/laravel-cards",
    "description": "A flexible and extensible content container with multiple variants and options.",
    "keywords": [
        "davide-casiraghi",
        "laravel-cards"
    ],
    "homepage": "https://github.com/davide-casiraghi/laravel-cards",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Davide Casiraghi",
            "email": "davide.casiraghi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "astrotomic/laravel-translatable": "^11.1",
        "davide-casiraghi/laravel-form-partials": "^1.0",
        "illuminate/support": "5.8.* || ^6.0",
        "intervention/image": "^2.4",
        "mcamara/laravel-localization": "^1.3",
        "nesbot/carbon": "^2.19"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "DavideCasiraghi\\LaravelCards\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DavideCasiraghi\\LaravelCards\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DavideCasiraghi\\LaravelCards\\LaravelCardsServiceProvider"
            ],
            "aliases": {
                "LaravelCards": "DavideCasiraghi\\LaravelCards\\LaravelCards"
            }
        }
    }
}
